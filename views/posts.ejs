<!doctype html>
<html>
  <head>
    <title>Register for <%=forumName%></title>
    <link rel="stylesheet"  type="text/css" href="/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  </head>
  <body>
    <a href="/"><button class="home-btn"><i class="fa fa-home"></i> Home</button></a>
    <h1>Posts for <%=forumName%></h1>
    <!-- form which takes in topic name -->
    <form action="/search-posts" method="GET">
      <p>Search for a particular topic</p>
      <input id="search-box" type="text" name="keyword" value="">
      <input type="submit" value="Search" >
    </form>
    <h1>All Posts</h1>
    <!-- lists the posts with the post details -->
    <div class="list-container">
      <% users.map((post)=>{ %>
        <div class="card">
          <p class="post-date"><%=post.post_date.toString().substring(0,15) %> <%=post.post_time%></p>
          <h4 class="author"><%=post.first_name%> <%=post.last_name%><span id="author-username"> @<%=post.username%></span></h4>
          <p class="post-topic"><b>Topic:</b> <%=post.name%></p>
          <p></p>
          <p id="description-body"><%=post.content%></p>
        </div>
        <% }) %>
    </div>
  </body>
</html>